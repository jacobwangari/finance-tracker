<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="bi bi-list-ul"></i> My Transactions</h2>
  <a href="/transactions/add" class="btn btn-primary">
    <i class="bi bi-plus-circle"></i> Add Transaction
  </a>
</div>

{{#if transactions}}
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Type</th>
              <th>Category</th>
              <th>Description</th>
              <th class="text-end">Amount</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each transactions}}
              <tr>
                <td>{{formatDate date}}</td>
                <td>
                  <span class="badge {{#if (eq type 'income')}}bg-success{{else}}bg-danger{{/if}}">
                    {{#if (eq type 'income')}}
                      <i class="bi bi-arrow-up-circle"></i> Income
                    {{else}}
                      <i class="bi bi-arrow-down-circle"></i> Expense
                    {{/if}}
                  </span>
                </td>
                <td>{{category}}</td>
                <td>{{description}}</td>
                <td class="text-end">
                  <strong class="{{#if (eq type 'income')}}text-success{{else}}text-danger{{/if}}">
                    {{#if (eq type 'income')}}+{{else}}-{{/if}}{{formatCurrency amount}}
                  </strong>
                </td>
                <td class="text-center">
                  <a href="/transactions/edit/{{_id}}" class="btn btn-sm btn-warning">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{_id}}">
                    <i class="bi bi-trash"></i>
                  </button>

                  <!-- Delete Modal -->
                  <div class="modal fade" id="deleteModal{{_id}}" tabindex="-1">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Confirm Delete</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                          Are you sure you want to delete this transaction?
                          <p class="mt-2"><strong>{{description}}</strong> - {{formatCurrency amount}}</p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                          <form action="/transactions/{{_id}}?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{{else}}
  <div class="alert alert-info text-center">
    <i class="bi bi-info-circle"></i> No transactions found. <a href="/transactions/add">Add your first transaction</a>
  </div>
{{/if}}